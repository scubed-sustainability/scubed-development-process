{
  "name": "scubed-development-process",
  "displayName": "S-cubed Development Process",
  "description": "Complete AI-powered development process with requirements management, GitHub workflows, template gallery, and Claude integration",
  "version": "1.0.51",
  "publisher": "scubed-solutions",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/scubed-sustainability/scubed-development-process.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "template",
    "project",
    "requirements",
    "api",
    "data-pipeline",
    "mobile",
    "claude",
    "ai",
    "loop",
    "scubed"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scubed.openTemplateGallery",
        "title": "Open Template Gallery",
        "category": "S-cubed"
      },
      {
        "command": "scubed.checkForUpdates",
        "title": "Check for Updates",
        "category": "S-cubed"
      },
      {
        "command": "scubed.showLogOutput",
        "title": "Show Extension Logs",
        "category": "S-cubed"
      },
      {
        "command": "scubed.pushToGitHub",
        "title": "Push Requirements to GitHub",
        "category": "S-cubed"
      },
      {
        "command": "scubed.syncWithGitHub",
        "title": "Sync with GitHub",
        "category": "S-cubed"
      },
      {
        "command": "scubed.checkGitHubFeedback",
        "title": "Check GitHub Feedback",
        "category": "S-cubed"
      },
      {
        "command": "scubed.checkApprovalStatus",
        "title": "Check Approval Status",
        "category": "S-cubed"
      },
      {
        "command": "scubed.triggerApprovalCheck",
        "title": "Trigger Approval Check",
        "category": "S-cubed"
      },
      {
        "command": "scubed.requestReReview",
        "title": "Request Re-Review",
        "category": "S-cubed"
      },
      {
        "command": "scubed.moveToInDevelopment",
        "title": "Move to In Development",
        "category": "S-cubed"
      },
      {
        "command": "scubed.viewRequirementsDashboard",
        "title": "View Requirements Dashboard",
        "category": "S-cubed"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "scubed.openTemplateGallery",
          "when": "true"
        },
        {
          "command": "scubed.checkForUpdates",
          "when": "true"
        },
        {
          "command": "scubed.showLogOutput",
          "when": "true"
        },
        {
          "command": "scubed.pushToGitHub",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "scubed.syncWithGitHub",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "scubed.checkGitHubFeedback",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "scubed.checkApprovalStatus",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "scubed.triggerApprovalCheck",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "scubed.requestReReview",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "scubed.moveToInDevelopment",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "scubed.viewRequirementsDashboard",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "explorer/context": []
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/claude-prompts.json"
      },
      {
        "language": "json",
        "path": "./snippets/project-config.json"
      }
    ],
    "views": {
      "scubed-explorer": [
        {
          "id": "scubed.projectTemplates",
          "name": "Project Templates",
          "when": "true",
          "icon": "$(file-directory)"
        },
        {
          "id": "scubed.quickActions",
          "name": "Quick Actions",
          "when": "true",
          "icon": "$(zap)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scubed-explorer",
          "title": "SCubed",
          "icon": "images/activity-icon.svg"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "scubed",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The S-cubed task to run"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "scubed-lint",
        "owner": "scubed",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error):\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "configuration": {
      "title": "S-cubed Requirements Template",
      "properties": {
        "scubed.templateSource": {
          "type": "string",
          "default": "https://github.com/scubed-sustainability/scubed-development-process/archive/refs/heads/main.zip",
          "description": "URL to the requirements template archive"
        },
        "scubed.defaultProjectPath": {
          "type": "string",
          "default": "",
          "description": "Default path for new projects"
        },
        "scubed.autoInitialize": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run initialization tasks after creating a project"
        },
        "scubed.enableLoopIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Microsoft Loop integration features"
        },
        "scubed.updateCheckUrl": {
          "type": "string",
          "default": "https://github.com/scubed-sustainability/scubed-development-process/releases/latest",
          "description": "URL to check for extension updates"
        },
        "scubed.autoCheckUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for extension updates on startup"
        },
        "scubed.github.owner": {
          "type": "string",
          "default": "",
          "description": "GitHub repository owner/organization name"
        },
        "scubed.github.repo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository name"
        },
        "scubed.github.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync requirements to GitHub on save"
        },
        "scubed.github.stakeholderTeam": {
          "type": "string",
          "default": "",
          "description": "GitHub team name for stakeholder notifications (optional)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run validate-ux && npm run webpack",
    "compile": "tsc -p ./",
    "webpack": "webpack --mode production --devtool hidden-source-map",
    "webpack:dev": "webpack --mode development --watch",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && npm run webpack && node ./tests/runTest.js",
    "validate-ux": "node scripts/validate-ux.js",
    "pretest": "npm run validate-ux",
    "sync-version": "node scripts/sync-version.js",
    "version": "npm run sync-version && git add . && echo 'ðŸ”„ Syncing versions across all files...' && echo 'âœ… All version changes staged'",
    "build": "npm run sync-version && npm run validate-ux && npm run compile",
    "release:patch": "cd .. && ./scripts/release.sh patch",
    "release:minor": "cd .. && ./scripts/release.sh minor",
    "release:major": "cd .. && ./scripts/release.sh major"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/yauzl": "^2.10.3",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^11.7.1",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@octokit/auth-oauth-app": "^6.0.0",
    "@octokit/rest": "^20.0.0",
    "axios": "^1.6.0",
    "fs-extra": "^11.0.0",
    "markdown-it": "^14.0.0",
    "yauzl": "^2.10.0"
  }
}

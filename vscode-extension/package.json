{
  "name": "scubed-development-process",
  "displayName": "S-cubed Development Process",
  "description": "Complete AI-powered development process with multiple project templates, Claude workflows, and automated documentation",
  "version": "1.0.0",
  "publisher": "scubed-solutions",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Templates"
  ],
  "keywords": [
    "template",
    "project",
    "requirements",
    "api",
    "data-pipeline", 
    "mobile",
    "claude",
    "ai",
    "loop",
    "scubed"
  ],
  "activationEvents": [
    "onCommand:scubed.createProject",
    "onCommand:scubed.initializeProject",
    "onCommand:scubed.generatePrompts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scubed.createProject",
        "title": "Create New Project from Template",
        "category": "S-cubed"
      },
      {
        "command": "scubed.initializeProject",
        "title": "Initialize Current Project",
        "category": "S-cubed"
      },
      {
        "command": "scubed.generatePrompts",
        "title": "Generate Discovery Prompts",
        "category": "S-cubed"
      },
      {
        "command": "scubed.openTemplateGallery",
        "title": "Open Template Gallery",
        "category": "S-cubed"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "scubed.createProject",
          "when": "true"
        },
        {
          "command": "scubed.initializeProject",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "scubed.generatePrompts",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "explorer/context": [
        {
          "command": "scubed.createProject",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/claude-prompts.json"
      },
      {
        "language": "json",
        "path": "./snippets/project-config.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "scubed",
        "required": ["task"],
        "properties": {
          "task": {
            "type": "string",
            "description": "The S-cubed task to run"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "scubed-lint",
        "owner": "scubed",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error):\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "configuration": {
      "title": "S-cubed Requirements Template",
      "properties": {
        "scubed.templateSource": {
          "type": "string",
          "default": "https://github.com/your-org/requirements-template/archive/refs/heads/main.zip",
          "description": "URL to the requirements template archive"
        },
        "scubed.defaultProjectPath": {
          "type": "string",
          "default": "",
          "description": "Default path for new projects"
        },
        "scubed.autoInitialize": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run initialization tasks after creating a project"
        },
        "scubed.enableLoopIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Microsoft Loop integration features"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fs-extra": "^11.0.0",
    "yauzl": "^2.10.0"
  }
}